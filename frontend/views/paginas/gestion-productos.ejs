<%- include('../parciales/headerAdmin') %>
<div class="admin-productos-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card productos-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-boxes me-2"></i>Gestión de Productos</h4>
                        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#modalProducto">
                            <i class="fas fa-plus"></i> Agregar Producto
                        </button>
                    </div>
                    <div class="card-body">
                        <!-- Filtros y búsqueda -->
                        <div class="filtros-container">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                                        <input type="text" id="buscarProducto" class="form-control" placeholder="Buscar productos por nombre...">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <select id="filtroDisponibilidad" class="form-select">
                                        <option value="">Todos los productos</option>
                                        <option value="true">Disponibles</option>
                                        <option value="false">No disponibles</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <button id="btnRefrescar" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-sync-alt"></i> Refrescar
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Tabla de productos -->
                        <div class="table-responsive">
                            <table class="table productos-table">
                                <thead>
                                    <tr>
                                        <th style="width: 80px;">Imagen</th>
                                        <th>Nombre</th>
                                        <th style="width: 120px;">Precio</th>
                                        <th style="width: 140px;">Disponibilidad</th>
                                        <th style="width: 120px;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="tablaProductos">
                                    <!-- Los productos se cargarán aquí dinámicamente -->
                                </tbody>
                            </table>
                        </div>

                        <!-- Mensaje cuando no hay productos -->
                        <div id="mensajeSinProductos" class="sin-productos d-none">
                            <i class="fas fa-box-open"></i>
                            <h5>No hay productos registrados</h5>
                            <p>Comienza agregando tu primer producto para gestionar tu inventario</p>
                            <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#modalProducto">
                                <i class="fas fa-plus"></i> Agregar Primer Producto
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Agregar/Editar Producto -->
<div class="modal fade modal-producto" id="modalProducto" tabindex="-1" aria-labelledby="modalProductoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalProductoLabel"><i class="fas fa-box me-2"></i>Agregar Producto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formProducto" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="productoId" name="id">
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="nombre" class="form-label fw-semibold">
                                    <i class="fas fa-tag me-1"></i>Nombre del Producto *
                                </label>
                                <input type="text" class="form-control" id="nombre" name="nombre" required>
                                <div class="invalid-feedback">
                                    Por favor ingresa un nombre válido (3-50 caracteres).
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="precio" class="form-label fw-semibold">
                                    <i class="fas fa-dollar-sign me-1"></i>Precio (COP) *
                                </label>
                                <input type="number" class="form-control" id="precio" name="precio" min="0" step="0.01" required>
                                <div class="invalid-feedback">
                                    Por favor ingresa un precio válido.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="disponibilidad" class="form-label fw-semibold">
                                    <i class="fas fa-toggle-on me-1"></i>Disponibilidad
                                </label>
                                <select class="form-select" id="disponibilidad" name="disponibilidad">
                                    <option value="true">Disponible</option>
                                    <option value="false">No disponible</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="imagen" class="form-label fw-semibold">
                                    <i class="fas fa-image me-1"></i>Imagen del Producto
                                </label>
                                <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
                                <div class="form-text">Formatos permitidos: JPG, PNG, WebP. Máximo 5MB.</div>
                            </div>
                        </div>
                    </div>

                    <!-- Vista previa de la imagen -->
                    <div class="row">
                        <div class="col-12">
                            <div id="vistaPrevia" class="text-center d-none">
                                <label class="form-label fw-semibold">Vista previa:</label>
                                <div>
                                    <img id="imagenPrevia" src="" alt="Vista previa" class="vista-previa-imagen">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnGuardar">
                        <i class="fas fa-save me-1"></i>Guardar Producto
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Confirmación para Eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este producto?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Esta acción no se puede deshacer.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnConfirmarEliminar">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast para notificaciones -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i id="toastIcon" class="fas fa-info-circle me-2"></i>
            <strong class="me-auto" id="toastTitle">Notificación</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Mensaje de notificación
        </div>
    </div>
</div>

<!-- Scripts específicos para gestión de productos -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/admin-productos.js"></script>

