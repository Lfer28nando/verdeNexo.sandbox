<!-- Secci贸n de usuarios registrados -->
<div class="row mt-4" id="seccion-usuarios" style="display: none;">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>
                    Usuarios Registrados
                </h5>
                <button class="btn btn-sm btn-outline-secondary" onclick="ocultarSeccionUsuarios()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="card-body">
                <div id="contenedor-usuarios">
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <p class="mt-2">Cargando usuarios...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/admin-usuarios.js"></script>
<script>
// Funci贸n para mostrar/ocultar secci贸n de usuarios
function mostrarSeccionUsuarios() {
    const seccion = document.getElementById('seccion-usuarios');
    if (seccion) {
        seccion.style.display = 'block';
        cargarUsuarios(); // Cargar usuarios cuando se muestre la secci贸n
    }
}

function ocultarSeccionUsuarios() {
    const seccion = document.getElementById('seccion-usuarios');
    if (seccion) {
        seccion.style.display = 'none';
    }
}
</script>

