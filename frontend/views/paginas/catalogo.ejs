<%- include('../parciales/header') %>

<!-- Banner del catálogo -->
<div class="loom-banner-envio">
  <strong>Catálogo de Plantas</strong> - Encuentra la planta perfecta para tu hogar
</div>

<!-- Contenido principal del catálogo -->
<div class="container-fluid py-5">
  <div class="row">
    
    <!-- Sidebar de filtros -->
    <div class="col-lg-3 col-md-4 mb-4">
      <div class="card" style="background: #f8f9fa; border: none;">
        <div class="card-header" style="background: #1a1a1a; color: white;">
          <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filtros</h5>
        </div>
        <div class="card-body">
          
          <!-- Filtro por categoría -->
          <div class="mb-4">
            <h6 class="fw-bold text-dark">Categoría</h6>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="categoria" id="todas" value="" checked>
              <label class="form-check-label" for="todas">Todas las categorías</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="categoria" id="interior" value="interior">
              <label class="form-check-label" for="interior">Plantas de Interior</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="categoria" id="exterior" value="exterior">
              <label class="form-check-label" for="exterior">Plantas de Exterior</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="categoria" id="flores" value="flores">
              <label class="form-check-label" for="flores">Flores</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="categoria" id="cactus" value="cactus">
              <label class="form-check-label" for="cactus">Cactus y Suculentas</label>
            </div>
          </div>

          <!-- Filtro por precio -->
          <div class="mb-4">
            <h6 class="fw-bold text-dark">Rango de Precio</h6>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="precio" id="todos-precios" value="" checked>
              <label class="form-check-label" for="todos-precios">Todos los precios</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="precio" id="precio1" value="0-50000">
              <label class="form-check-label" for="precio1">$0 - $50.000</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="precio" id="precio2" value="50000-100000">
              <label class="form-check-label" for="precio2">$50.000 - $100.000</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="precio" id="precio3" value="100000-200000">
              <label class="form-check-label" for="precio3">$100.000 - $200.000</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="precio" id="precio4" value="200000-999999">
              <label class="form-check-label" for="precio4">Más de $200.000</label>
            </div>
          </div>

          <!-- Búsqueda -->
          <div class="mb-4">
            <h6 class="fw-bold text-dark">Buscar</h6>
            <div class="input-group">
              <input type="text" class="form-control" id="busquedaProducto" placeholder="Nombre de la planta...">
              <button class="loom-btn" type="button" onclick="aplicarFiltros()" style="padding: 0.5rem 1rem;">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>

          <!-- Botón limpiar filtros -->
          <button class="loom-btn w-100" onclick="limpiarFiltros()">
            <i class="fas fa-eraser me-2"></i>Limpiar filtros
          </button>
          
        </div>
      </div>
    </div>

    <!-- Área de productos -->
    <div class="col-lg-9 col-md-8">
      
      <!-- Header con ordenamiento -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h3 class="mb-0">Nuestro Catálogo</h3>
          <p class="text-muted" id="contador-productos">Cargando productos...</p>
        </div>
        <div class="d-flex align-items-center gap-2">
          <label for="ordenar" class="text-muted small">Ordenar por:</label>
          <select class="form-select form-select-sm" id="ordenar" onchange="aplicarFiltros()" style="width: auto;">
            <option value="">Relevancia</option>
            <option value="nombre-asc">Nombre A-Z</option>
            <option value="nombre-desc">Nombre Z-A</option>
            <option value="precio-asc">Precio menor a mayor</option>
            <option value="precio-desc">Precio mayor a menor</option>
          </select>
        </div>
      </div>

      <!-- Grid de productos -->
      <div class="row" id="grid-productos">
        <div class="col-12 text-center py-5">
          <div class="spinner-border text-secondary" role="status">
            <span class="visually-hidden">Cargando...</span>
          </div>
          <p class="text-muted mt-3">Cargando productos...</p>
        </div>
      </div>

      <!-- Paginación -->
      <nav aria-label="Paginación del catálogo" class="mt-4">
        <ul class="pagination justify-content-center" id="paginacion">
          <!-- La paginación se genera dinámicamente -->
        </ul>
      </nav>

    </div>
  </div>
</div>

<!-- Modal de detalles del producto -->
<div class="modal fade" id="modalProducto" tabindex="-1" aria-labelledby="modalProductoLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalProductoLabel">Detalles del Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-contenido">
        <!-- El contenido se carga dinámicamente -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" class="loom-btn" id="btn-agregar-modal">Agregar al carrito</button>
      </div>
    </div>
  </div>
</div>

<%- include('../parciales/userPanel') %>
<%- include('../parciales/footer') %>

<!-- Script específico del catálogo -->
<script src="/js/catalogo.js"></script>
